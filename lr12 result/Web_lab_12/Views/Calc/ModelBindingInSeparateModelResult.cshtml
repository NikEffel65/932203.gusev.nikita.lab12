@model Web_lab_12.Models.CalculatorResultModel
@{
    <h1>Result</h1>
    <h3 class=" bs ">@Model.Number1 @Model.Operation @Model.Number2 =
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <span style="color:red;">@Model.ErrorMessage</span>
        } else{
            @Model.Result
        }
    
    </h3>
}
